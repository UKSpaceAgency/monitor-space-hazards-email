{# Subject - Low-risk re-entry alert: <object common name> (<MMM DD, YYYY>)

  Variables which need to be passed to this template
  
  reentry_event_report 
    reentry_event_report.damages_liability
    reentry_event.press_attention
    reentry_event.exec_summary
    reentry_event_report.immediate_response
  
  application_url: MSH base url
  reentry_event_map_url: link to the reentry map showing where object may enter
  #}
  
  {% extends "base.jinja" %}
  
  {% set risk = reentry_event_report.monte_carlo_probability|to_risk %}
  {% if risk == "Low" %}
    {% set risk_background_color = "#F0F0F0" %}
    {% set recommended_actions = "We would not normally expect stakeholders to take action on this report." %}
   
  {% elif risk == "Medium" %}
    {% set risk_background_color = "#FFF0C8" %}
    {% set recommended_actions = "Stakeholders may wish to consider internal escalation." %}
  {% else %}
    {% set risk_background_color = "#F1C6C6" %}
    {% set recommended_actions = "Stakeholders may wish to ensure response plans are in place." %} 
  {% endif %}
  
  {% block title %}
    Uncontrolled Re-Entry Early Warning
    {% if reentry_event.reentry_report_number > 1 %}
      - Updated
    {% endif %}  
  {% endblock %}

  {% block subtitle %}
    {% if reentry_event_report.object_name and reentry_event_report.object_name|lower != "unknown" %}
      {{ reentry_event_report.object_name }} 
    {% else %}
      Unknown
    {% endif %}
  {% endblock %}

  
  {% block content %}
    <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation" style="padding-top:0.5rem;padding-bottom:0.5rem;max-width:37.5em">
      <tbody>
        <tr style="width:100%">
          <td>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:0.25rem;padding-bottom:0.25rem;border-color:rgb(0,110,187);border-style:solid;border-bottom-width:1px">
              <tbody>
                <tr>
                  <td>
                    <h1 style="font-size:1rem;line-height:1.5rem;margin:0px">Summary</h1>
                  </td>
                </tr>
              </tbody>
            </table>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:1rem">
              <tbody>
                <tr>
                  <td>
                    <table
                      style="width:100%;text-align:left;font-size:0.875rem;line-height:1.25rem;border-collapse:collapse">
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">Risk Assessment</th>
                        <td align="center"
                          style="width:66.666667%;padding:0.5rem;background-color:{{ risk_background_color }};font-weight:700">{{ risk }}
                        </td>
                      </tr>
                      <tr style="width:100%">
                        <th style="width:33.333333%;padding:0.5rem">Affected UK Interests</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event_report.impact.by_nation|to_affected_territories or "No regions affected" }}</td>
                      </tr>
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">Debris Impact in UK</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ '%0.3f' % (100*reentry_event_report.monte_carlo_probability)|float }}%</td>
                      </tr>
                      <tr style="width:100%">
                        <th style="width:33.333333%;padding:0.5rem">Time Frame</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ (reentry_event_report.time_window_start,reentry_event_report.time_window_end)|to_time_frame }}</td>
                      </tr>
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">Object Type</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event_report.object_type if reentry_event_report.object_type else "Unknown" }}</td>
                      </tr>
                      <tr style="width:100%">
                        <th style="width:33.333333%;padding:0.5rem">Object Name</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event_report.object_name if reentry_event_report.object_name else "Unknown" }}</td>
                      </tr>
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">NORAD ID</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event_report.norad_id if reentry_event_report.norad_id else "Unknown" }}</td>
                      </tr>
                      <tr style="width:100%">
                        <th style="width:33.333333%;padding:0.5rem">Estimated mass</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event_report.estimated_mass if reentry_event_report.estimated_mass else "Unknown" }} kg</td>
                      </tr>
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">Height</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event_report.object_height if reentry_event_report.object_height else "Unknown" }} m</td>
                      </tr>
                      <tr style="width:100%">
                        <th style="width:33.333333%;padding:0.5rem">Width</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event_report.object_width if reentry_event_report.object_width else "Unknown" }} m</td>
                      </tr>
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">Report Number</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event.reentry_report_number if reentry_event.reentry_report_number else "Unknown" }}</td>
                      </tr>
                      <tr style="width:100%">
                        <th style="width:33.333333%;padding:0.5rem">Launching State</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event_report.license_country|to_full_country_name if reentry_event_report.license_country|to_full_country_name  else "Unknown" }}
                          {% if reentry_event_report.damages_liability %}
                            <br>{{ reentry_event_report.damages_liability }}
                          {% else %}
                            Unknown
                          {% endif %}
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
    <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation" style="padding-top:0.5rem;padding-bottom:0.5rem;max-width:37.5em">
      <tbody>
        <tr style="width:100%">
          <td>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:0.25rem;padding-bottom:0.25rem;border-color:rgb(0,110,187);border-style:solid;border-bottom-width:1px">
              <tbody>
                <tr>
                  <td>
                    <h1 style="font-size:1rem;line-height:1.5rem;margin:0px">Additional Information</h1>
                  </td>
                </tr>
              </tbody>
            </table>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:1rem">
              <tbody>
                <tr>
                  <td>
                    <p style="font-size:0.875rem;line-height:1.25rem;margin:0px">The National Space Operations Centre is monitoring the upcoming re-entry of a <a href="{{ application_url }}/re-entries/{{ reentry_event_report.short_id }}/alert">{{ reentry_event_report.object_type if reentry_event_report.object_type else "Unknown" }} (NORAD ID {{reentry_event_report.norad_id if reentry_event_report.norad_id else "Unknown"}} - {{ reentry_event_report.object_name if reentry_event_report.object_name else "Unknown" }}), launched in {{ reentry_event_report.launch_year if reentry_event_report.launch_year else "Unknown" }}</a>. The launching state is likely to be liable for any damages and associated costs of the response and recovery efforts caused.</p>
                  </td>
                </tr>
              </tbody>
            </table>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:1rem">
              <tbody>
                <tr>
                  <td>
                    <table
                      style="width:100%;text-align:left;font-size:0.875rem;line-height:1.25rem;border-collapse:collapse">
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">Recommended Actions</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ recommended_actions }}</td>
                      </tr>
                      <tr style="width:100%">
                        <th style="width:33.333333%;padding:0.5rem">Event Information</th>
                        <td style="width:66.666667%;padding:0.5rem">
                          The {{ reentry_event_report.object_type|title if reentry_event_report.object_type and reentry_event_report.object_type|lower != "unknown" else "object" }} is expected to re-enter at <b>{{(reentry_event_report.time_window_start,reentry_event_report.time_window_end)|to_time_frame }}.</b> The UK mainland is expected to have {{ reentry_event_report.overflight_time|length }} overflight(s) in the current uncertainty window. The {{ reentry_event_report.object_type|title if reentry_event_report.object_type and reentry_event_report.object_type|lower != "unknown" else "object" }} has a <b>{{ '%0.3f' %(100*reentry_event_report.monte_carlo_probability)|float }}% probability of UK re-entry.</b> This meets the {{ risk }}-risk escalation threshold. We cannot rule out that hazardous material will have contaminated the re-entering objects. <a href="https://www.gov.uk/government/publications/hydrazine-properties-and-incident-management" style="color:rgb(0,110,187)">Hydrazine</a> is commonly used as rocket-fuel.</a></td>
                      </tr>
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">Press and Public Lines</th>
                        <td style="width:66.666667%;padding:0.5rem">{% if reentry_event_report.press_attention_addition %}{{ reentry_event_report.press_attention_addition }}{% else %}We have not seen any press attention on this event.{% endif %}</td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
    <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
      style="padding-top:0.5rem;padding-bottom:0.5rem;max-width:37.5em">
      <tbody>
        <tr style="width:100%">
          <td>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:0.25rem;padding-bottom:0.25rem;border-color:rgb(0,110,187);border-style:solid;border-bottom-width:1px">
              <tbody>
                <tr>
                  <td>
                    <h1 style="font-size:1rem;line-height:1.5rem;margin:0px">Impact Risk Locations</h1>
                  </td>
                </tr>
              </tbody>
            </table>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:1rem">
              <tbody>
                <tr>
                  <td>
                    <p style="font-size:0.875rem;line-height:1.25rem;margin:0px;margin-bottom:1rem">The ground trace of the object is shown in red on the map below.</p>
                    <img src="{{ reentry_event_map.src }}" style="width:100%;height:auto;margin-bottom:16px;display:block;outline:none;border:none;text-decoration:none;font-family:Calibri, Arial, sans-serif" width="580" />
                    <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation" style="margin:0;border-collapse:collapse;border-spacing:0">
                      <tbody>
                        <tr>
                          <td>
                            <table style="width:100%;text-align:left;font-size:0.875rem;line-height:1.25rem;border-collapse:collapse">
                              <tr style="width:100%">
                                <th style="width:33.333333%;padding:0.5rem">UK</th>
                                <td style="width:66.666667%;padding:0.5rem">{{reentry_event_report.impact.by_nation|to_affected_territories or "No regions affected"}}</td>
                              </tr>
                              <tr style="width:100%;background-color:rgb(240,240,240)">
                                <th style="width:33.333333%;padding:0.5rem">England</th>
                                <td style="width:66.666667%;padding:0.5rem">{{reentry_event_report.impact.england|to_affected_territories or "No regions affected"}}</td>
                              </tr>
                              <tr style="width:100%">
                                <th style="width:33.333333%;padding:0.5rem">Scotland</th>
                                <td style="width:66.666667%;padding:0.5rem">{{reentry_event_report.impact.scotland|to_affected_territories or "No regions affected"}}</td>
                              </tr>
                              <tr style="width:100%;background-color:rgb(240,240,240)">
                                <th style="width:33.333333%;padding:0.5rem">Wales</th>
                                <td style="width:66.666667%;padding:0.5rem">{{reentry_event_report.impact.wales|to_affected_territories or "No regions affected"}}</td>
                              </tr>
                              <tr style="width:100%">
                                <th style="width:33.333333%;padding:0.5rem">Northern Ireland</th>
                                <td style="width:66.666667%;padding:0.5rem">{{reentry_event_report.impact.northern_ireland|to_affected_territories or "No regions affected"}}</td>
                              </tr>
                              <tr style="width:100%;background-color:rgb(240,240,240)">
                                <th style="width:33.333333%;padding:0.5rem">UK OSTs and CDs</th>
                                <td style="width:66.666667%;padding:0.5rem">{{
                                        reentry_event_report.impact.overseas_territories_and_crown_dependencies|to_affected_territories or
                                        "No regions affected"}}</td>
                              </tr>
                              <tr style="width:100%">
                                <th style="width:33.333333%;padding:0.5rem">Airspace and Maritime</th>
                                <td style="width:66.666667%;padding:0.5rem">{{
                                        reentry_event_report.impact.maritime_and_airspace|to_affected_territories or
                                        "No regions affected"}}</td>
                              </tr>
                            </table>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                    <p style="font-size:0.875rem;line-height:1.25rem;margin:0px;margin-top:1rem">Sign in to <a href="{{ application_url }}/re-entries/{{ reentry_event_report.short_id }}/alert">Monitor Space Hazards</a> to view
                      analysis and additional information.</p>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>  
{% endblock %}
  