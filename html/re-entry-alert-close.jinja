{# Subject - Re-entry close down: <object type> <object name>

Variables which need to be passed to this template

reentry_event_report

reentry_event
  reentry_event.damages_liability
  reentry_event.press_attention
  
application_url: MSH base url
reentry_event_map_url: link to the reentry map showing where object entered
reentry_date: the date the reentry took place
decay_time: the decay time (UTC)
uncertainty: uncertainty window of decay time (minutes)
UK_impacted: contains text describing impact on the UK if there was one. Should be an empty string if no impact
#}

{% extends "base.jinja" %}

{% block header_colour %}#646464{% endblock %}


{% block title %}
  Re-entry close down alert
{% endblock %}

{% block subtitle %}
  {% if reentry_event_report.object_name and reentry_event_report.object_name|lower != "unknown" %}
    {{ reentry_event_report.object_name }} 
  {% else %}
    Unknown
  {% endif %}
{% endblock %}

{% block content %}
    <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation" style="padding-top:0.5rem;padding-bottom:0.5rem;max-width:37.5em">
      <tbody>
        <tr style="width:100%">
          <td>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:0.25rem;padding-bottom:0.25rem;border-color:rgb(0,110,187);border-style:solid;border-bottom-width:1px">
              <tbody>
                <tr>
                  <td>
                    <h1 style="font-size:1rem;line-height:1.5rem;margin:0px">Summary</h1>
                  </td>
                </tr>
              </tbody>
            </table>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:1rem">
              <tbody>
                <tr>
                  <td>
                    <table
                      style="width:100%;text-align:left;font-size:0.875rem;line-height:1.25rem;border-collapse:collapse">
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">Event Time (UTC)</th>
                        <td style="width:66.666667%;padding:0.5rem;">Final re-entry analysis shows that {{ reentry_event_report.object_name if reentry_event_report.object_name else "Unknown" }} re-entered at {% if decay_time %}{{ decay_time.strftime('%d/%m/%Y %H:%M:%S') }}{% else %}Unknown{% endif %} UTC  with an uncertainty window of ± {% if uncertainty is not none %}{{ uncertainty }}{% else %}Unknown{% endif %} minutes.
                        </td>
                      </tr>
                      <tr style="width:100%">
                        <th style="width:33.333333%;padding:0.5rem">Object Type</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event_report.object_type if reentry_event_report.object_type else "Unknown" }} (NORAD ID {{
                                        reentry_event_report.norad_id }} - {{ reentry_event_report.object_name if reentry_event_report.object_name else "Unknown" }})</td>
                      </tr>
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">Object Details</th>
                        <td style="width:66.666667%;padding:0.5rem">Estimated mass: {{ reentry_event_report.estimated_mass if reentry_event_report.estimated_mass else "Unknown" }} kg<br>
                          Height: {{ reentry_event_report.object_height if reentry_event_report.object_height else "Unknown" }} m<br>
                          Width: {{ reentry_event_report.object_width if reentry_event_report.object_width else "Unknown" }} m<br>
                        </td>
                      </tr>
                      <tr style="width:100%">
                        <th style="width:33.333333%;padding:0.5rem">Impact</th>
                        <td style="width:66.666667%;padding:0.5rem">
                          {% if UK_impacted == "" %}
                            We have received no reports to suggest the UK was impacted but will continue to monitor in case new information arises. 
                          {% else %}
                            {{ UK_impacted }}
                          {% endif %}
                        </td>
                      </tr>
                      <tr style="width:100%;background-color:rgb(240,240,240)">
                        <th style="width:33.333333%;padding:0.5rem">Liability</th>
                        <td style="width:66.666667%;padding:0.5rem">{{ reentry_event_report.license_country|to_full_country_name if reentry_event_report.license_country|to_full_country_name else "Unknown" }}
                          {% if reentry_event.damages_liability %}
                            <br>{{ reentry_event.damages_liability }}
                          {% else %}
                          {% endif %}
                        </td>
                      </tr>
                      <tr style="width:100%">
                        <th style="width:33.333333%;padding:0.5rem">Recommended Actions</th>
                        <td style="width:66.666667%;padding:0.5rem">No further actions required</td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
    <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
      style="padding-top:0.5rem;padding-bottom:0.5rem;max-width:37.5em">
      <tbody>
        <tr style="width:100%">
          <td>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:0.25rem;padding-bottom:0.25rem;border-color:rgb(0,110,187);border-style:solid;border-bottom-width:1px">
              <tbody>
                <tr>
                  <td>
                    <h1 style="font-size:1rem;line-height:1.5rem;margin:0px">Additional Information</h1>
                  </td>
                </tr>
              </tbody>
            </table>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:1rem">
              <tbody>
                <tr>
                  <td>
                    <p style="font-size:0.875rem;line-height:1.25rem;margin:0px;margin-bottom:1rem"><b>Event Information:</b><br />
                    The re-entry of object {{ reentry_event_report.object_name if reentry_event_report.object_name else "Unknown" }} has now passed.<br /><br />
                    Final re-entry analysis shows that {{ reentry_event_report.object_name if reentry_event_report.object_name else "Unknown" }} re-entered at {% if decay_time %}{{ decay_time.strftime('%d/%m/%Y %H:%M:%S') }}{% else %}Unknown{% endif %} UTC with an uncertainty window of ± {{ uncertainty if uncertainty else "Unknown"}} minutes.<br /><br />
                    {% if UK_impacted == "" %}
                      We have received no reports to suggest the UK was impacted but will continue to monitor in case new information arises. 
                    {% else %}
                      {{ UK_impacted }}
                    {% endif %}
                    </p>
                    <p style="font-size:0.875rem;line-height:1.25rem;margin:0px;margin-bottom:1rem">
                      <b>Press and Public Lines</b>
                      {% if reentry_event.press_attention %}
                        <br>{{ reentry_event.press_attention }}
                      {% else %}
                        <br>We have not seen any press attention on this event.
                      {% endif %}
                    </p>
                    <p style="font-size:0.875rem;line-height:1.25rem;margin:0px;f">Sign in to <a href="{{ application_url }}/re-entries/{{ reentry_event_report.short_id }}/alert">Monitor Space Hazards</a> for the
                      <!-- -->
                      <b>full report, interactive mapping for this incident and the archive.</b>
                    </p>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
    <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
      style="padding-top:0.5rem;padding-bottom:0.5rem;max-width:37.5em">
      <tbody>
        <tr style="width:100%">
          <td>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:0.25rem;padding-bottom:0.25rem;border-color:rgb(0,110,187);border-style:solid;border-bottom-width:1px">
              <tbody>
                <tr>
                  <td>
                    <h1 style="font-size:1rem;line-height:1.5rem;margin:0px">Impact Risk Locations</h1>
                  </td>
                </tr>
              </tbody>
            </table>
            <table align="center" width="100%" border="0" cellPadding="0" cellSpacing="0" role="presentation"
              style="padding-top:1rem">
              <tbody>
                <tr>
                  <td>
                    <p style="font-size:0.875rem;line-height:1.25rem;margin:0px;margin-bottom:1rem">The ground trace of the object is shown in red on the map below.</p>
                    <img src="{{ reentry_event_map.src }}" style="width:100%;height:auto;margin-bottom:16px;display:block;outline:none;border:none;text-decoration:none;font-family:Calibri, Arial, sans-serif" width="580" />
                    <p style="font-size:0.875rem;line-height:1.25rem;margin:0px;margin-top:1rem">Sign in to <a href="{{ application_url }}/re-entries/{{ reentry_event_report.short_id }}/alert">Monitor Space Hazards</a> to view
                      analysis and additional information.</p>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
{% endblock %}
